{
    "name": "phil/microsymfony",
    "description": "A template to initialize an application to use Symfony as a micro-framework",
    "license": "MIT",
    "type": "symfony-application-template",
    "keywords": [
        "micro-framework",
        "php",
        "poc",
        "project-template",
        "rad",
        "symfony",
        "web-application"
    ],
    "homepage": "https://ph-il.ca",
    "authors": [
        {
            "name": "Philippe Gamache",
            "email": "philippe@ph-il.ca"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "league/commonmark": "^2.7",
        "sentry/sentry-symfony": "^5.6",
        "runtime/frankenphp-symfony": "^0.2.0",
        "symfony/asset": "7.3.*",
        "symfony/asset-mapper": "7.3.*",
        "symfony/console": "7.3.*",
        "symfony/dotenv": "7.3.*",
        "symfony/flex": "^2.10",
        "symfony/form": "7.3.*",
        "symfony/framework-bundle": "7.3.*",
        "symfony/http-foundation": "7.3.*",
        "symfony/http-kernel": "7.3.*",
        "symfony/intl": "7.3.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/routing": "7.3.*",
        "symfony/runtime": "7.3.*",
        "symfony/stimulus-bundle": "^2.31",
        "symfony/string": "7.3.*",
        "symfony/translation": "7.3.*",
        "symfony/twig-bundle": "7.3.*",
        "symfony/ux-turbo": "^2.31",
        "symfony/validator": "7.3.*",
        "symfony/web-link": "7.3.*",
        "symfony/yaml": "7.3.*",
        "twig/extra-bundle": "^3.22",
        "twig/intl-extra": "^3.22",
        "twig/markdown-extra": "^3.22",
        "twig/string-extra": "^3.22",
        "twig/twig": "^3.22"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "kocal/biome-js-bundle": "^1.5",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpdoc-parser": "^2.3",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^11.5",
        "rector/rector": "^2.2",
        "roave/security-advisories": "dev-latest",
        "symfony/browser-kit": "7.3.*",
        "symfony/css-selector": "7.3.*",
        "symfony/debug-bundle": "7.3.*",
        "symfony/maker-bundle": "^1.64",
        "symfony/panther": "^2.2",
        "symfony/requirements-checker": "^2.0",
        "symfony/stopwatch": "7.3.*",
        "symfony/var-dumper": "7.3.*",
        "symfony/web-profiler-bundle": "7.3.*"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        },
        "symfony": {
            "allow-contrib": true,
            "require": "7.3.*",
            "docker": false
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts",
            "@composer bin php-cs-fixer install --ansi"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "app:test": [
            "vendor/bin/phpunit"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "requirements-checker": "script"
        }
    },
    "scripts-descriptions": {
        "app:test": "Run all PHPUnit tests"
    }
}
